@model FinanceSystem.Models.ViewModel

@foreach (var item in Model.Transactions)
{
    <div class="products-row" id="transactionList">
        <button class="cell-more-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-vertical"><circle cx="12" cy="12" r="1" /><circle cx="12" cy="5" r="1" /><circle cx="12" cy="19" r="1" /></svg>
        </button>
        <div class="product-cell image">
            <img src="@item.Image" alt="@item.Image">
            <span>$@item.Amount</span>
        </div>
        <div class="product-cell category"><span class="cell-label">Category:</span>@item.Category.CategoryName</div>
        <div class="product-cell status-cell">
            <span class="cell-label">Status:</span>
            <span class="status active">Active</span>
        </div>
        <div class="product-cell sales"><span class="cell-label">Sales:</span>@item.CreateDate</div>
        <div class="product-cell stock"><span class="cell-label">Stock:</span>@item.Note</div>
    </div>
}
