@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{


     @Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "box1" })
    {
        @Html.AntiForgeryToken()
        <div class="box1">
            <div class="dropdown1">
                Account
                <span class="left-icon"></span>
                <span class="right-icon"></span>
                <div class="items">

                    <a href="javascript:document.getElementById('logoutForm').submit()" style="--i:4;"><span></span>Logout</a>
                </div>
            </div>
        </div>
        <script src="~/Content/js/account.js"></script>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
