@model IEnumerable<FinanceSystem.Models.Category>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{ var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");}
<div class="flex-grow bg-white dark:bg-gray-900 overflow-y-auto">
    <div class="sm:px-7 sm:pt-7 px-4 pt-4 flex flex-col w-full border-b border-gray-200 bg-white dark:bg-gray-900 dark:text-white dark:border-gray-800 sticky top-0">

        <div class="flex w-full items-center">
            <div class="flex items-center text-3xl text-gray-900 dark:text-white">
                <p></p>
            </div>
            <div class="ml-auto sm:flex hidden items-center justify-end">
                <div class="text-right">
                    <div class="text-xs text-gray-400 dark:text-gray-400">
                        <a href="@Url.Action("Create", "Categories")"><button>Create</button></a>
                    </div>
                    <div class="text-gray-900 text-lg dark:text-white">
                    </div>
                </div>
            </div>

        </div>
        <div class="flex items-center space-x-3 sm:mt-7 mt-4">
            <a href="#" class="px-3 border-b-2 border-blue-500 text-blue-500 dark:text-white dark:border-white pb-1.5">Categories</a>
        </div>
    </div>
    <table class="w-full text-left">
        <thead>
            <tr class="text-gray-400">
                <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-200 dark:border-gray-800">Name</th>
                <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-200 dark:border-gray-800">Image</th>                
                <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-200 dark:border-gray-800">Edit</th>                
                <th class="font-normal px-3 pt-0 pb-3 border-b border-gray-200 dark:border-gray-800">Delete</th>                
            </tr>
        </thead>
        <tbody class="text-gray-600 dark:text-gray-100">
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td class="sm:p-3 py-2 px-1 border-b border-gray-200 dark:border-gray-800">
                        <div class="flex items-center">

                            @item.CategoryName
                        </div>
                    </td>
                    <td class="sm:p-3 py-2 px-1 border-b border-gray-200 dark:border-gray-800">
                        <div class="flex items-center">
                            <img src="@item.Image" alt="@item.Image" width="100px" />
                        </div>
                    </td>
                    <td class="sm:p-3 py-2 px-1 border-b border-gray-200 dark:border-gray-800">
                        <div class="flex items-center">
                            <a href="@Url.Action("Edit", "Categories", new {id = item.CategoryID})"><button>Edit</button></a> 
                        </div>
                    </td>
                    <td class="sm:p-3 py-2 px-1 border-b border-gray-200 dark:border-gray-800">
                        <div class="flex items-center">
                            <a href="@Url.Action("Delete", "Categories", new {id = item.CategoryID})"><button>Delte</button></a>
                        </div>
                    </td>
                    @*<td class="sm:p-3 py-2 px-1 border-b border-gray-200 dark:border-gray-800 md:table-cell hidden">@item.Note</td>
                    @{
                        if (item.Income == true)
                        {
                            <td class="sm:p-3 py-2 px-1 border-b border-gray-200 dark:border-gray-800 text-green-500">$@String.Format(format, "{0:c0}", item.Amount)</td>
                        }
                        else
                        {
                            <td class="sm:p-3 py-2 px-1 border-b border-gray-200 dark:border-gray-800 text-red-500">$@String.Format(format, "{0:c0}", item.Amount)</td>
                        }
                    }

                    <td class="sm:p-3 py-2 px-1 border-b border-gray-200 dark:border-gray-800">
                        <div class="flex items-center">
                            <div class="sm:flex hidden flex-col">
                                @item.CreateDate.Value.ToShortDateString()
                                <div class="text-gray-400 text-xs">@item.CreateDate.Value.ToShortTimeString()</div>
                            </div>
                            <button class="w-8 h-8 inline-flex items-center justify-center text-gray-400 ml-auto">

                                <svg viewBox="0 0 24 24" class="w-5" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="1"></circle>
                                    <circle cx="19" cy="12" r="1"></circle>
                                    <circle cx="5" cy="12" r="1"></circle>
                                </svg>
                            </button>
                        </div>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
}
